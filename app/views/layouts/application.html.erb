<!DOCTYPE html>
<html>
  <head>
    <title>Fandom</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <ul class="nav-menu">
  <% if current_fan %>
    <li><%= link_to "Home", root_path %></li>
    <li><%= link_to "Your Profile", fan_path(current_fan) %></li>
    <li><%= link_to "Log Out", signout_path %></li>
    <li><%= link_to "Add a Team", new_team_path %></li>
  <% else %>
    <li><%= link_to "Home", root_path %></li>
    <li><%= link_to "Sign Up", signup_path %></li>
    <li><%= link_to "Log In", signin_path %></li>
  <% end %>
</ul>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
